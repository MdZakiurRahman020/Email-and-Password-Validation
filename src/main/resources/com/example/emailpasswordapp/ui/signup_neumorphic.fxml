<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.emailpasswordapp.controllers.SignupController"
            stylesheets="@style.css"
            prefWidth="500" prefHeight="560">

    <VBox alignment="CENTER" spacing="24" prefWidth="480" prefHeight="540"
          styleClass="container" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10">

        <!-- HEADER -->
        <VBox alignment="CENTER" spacing="8">
            <StackPane alignment="CENTER" styleClass="neu-icon glow">
                <Circle radius="40" fill="#e0e5ec" />
                <Label text="âœ¨" style="-fx-font-size: 28px; -fx-text-fill: #6c7293;" />
            </StackPane>
            <Label text="Create Account" styleClass="title" />
            <Label text="Join our platform" styleClass="subtitle" />
        </VBox>

        <!-- INPUT FIELDS -->
        <VBox spacing="16" alignment="CENTER">
            <!-- Email -->
            <VBox spacing="5">
                <TextField fx:id="emailField" promptText="Email Address" styleClass="input" />
                <Label fx:id="emailError" visible="false" styleClass="status" text="Invalid email" />
            </VBox>

            <!-- Password with toggle -->
            <VBox spacing="5">
                <HBox alignment="CENTER_RIGHT" spacing="6">
                    <!-- Hidden password -->
                    <PasswordField fx:id="passwordField" promptText="Password" styleClass="input" HBox.hgrow="ALWAYS" />

                    <!-- Visible text field -->
                    <TextField fx:id="visiblePasswordField" promptText="Password"
                               styleClass="input" visible="false" managed="false" HBox.hgrow="ALWAYS" />

                    <!-- Toggle button -->
                    <Button fx:id="togglePasswordButton" text="ðŸ‘" onAction="#togglePasswordVisibility"
                            styleClass="icon-btn" />
                </HBox>
                <Label fx:id="passwordError" visible="false" styleClass="status" text="Invalid password" />
            </VBox>
        </VBox>

        <!-- SIGN-UP BUTTON -->
        <VBox spacing="15" alignment="CENTER">
            <Button text="Sign Up" onAction="#handleSignup" styleClass="btn" />
            <Hyperlink text="Already have an account? Login" onAction="#switchToLogin" styleClass="hyperlink" />
        </VBox>

        <!-- DIVIDER -->
        <HBox alignment="CENTER" spacing="10">
            <Label text="â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€" style="-fx-text-fill: #bec3cf;" />
            <Label text="or" style="-fx-text-fill: #9499b7; -fx-font-size: 13px;" />
            <Label text="â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€" style="-fx-text-fill: #bec3cf;" />
        </HBox>

        <!-- SOCIAL BUTTONS -->
        <HBox alignment="CENTER" spacing="18">
            <Button text="G" styleClass="btn" prefWidth="50" prefHeight="50" />
            <Button text="F" styleClass="btn" prefWidth="50" prefHeight="50" />
            <Button text="T" styleClass="btn" prefWidth="50" prefHeight="50" />
        </HBox>

        <!-- STATUS LABEL -->
        <Label fx:id="statusLabel" styleClass="status" />

    </VBox>
</AnchorPane>
